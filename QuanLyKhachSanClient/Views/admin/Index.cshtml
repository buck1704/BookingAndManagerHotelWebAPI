
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.1.2/css/all.css">
    <link rel="stylesheet" href="./common/bootstrap-5.2.2-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">

    <style>
        li {
            list-style: none;
        }

        a {
            text-decoration: none;
            color: black;
            margin-top: 10px;
        }
        i{
            margin-right: 10px;
        }
        .admin {
            background-color: #937438;
            color: #fff;
            padding: 12px 14px;
            margin-bottom: 8px;
            border-radius: 4px;
        }

        .nav {
            font-size: 16px;
        }

        .sub-nav {
            margin-top: 16px;
            display: none;
        }

        .nav:hover .sub-nav {
            display: block;
        }

        .sub-nav li a {
            display: block;
            padding: 4px 4px;
        }

        .sub-nav li:hover a {
            background-color: #ccc;
        }

        .icon {
            font-size: 18px;
        }

        .header {
            position: fixed;
            right: 0;
            top: 0;
            left: 15%;
            color: white;
            background-color: #937438;
            font-weight: 500;
        }

        .content {
            margin-top: 160px;
            display: flex;
            justify-content: space-evenly;
        }

        .content .block-content {
            display: flex;
            width: 250px;
            height: 180px;
            border-radius: 12px;
            align-items: center;
            text-align: center;
            justify-content: center;
            font-size: 18px;
        }
    </style>
</head>

<body>
    <div>
        <!-- Sidebar -->
        <div class="sidebar w3-sidebar w3-light-grey w3-bar-block" style="width:15%; top: 0">
            <div class="w3-bar-item" style="height: 150px;">
                <ul style="padding: 0;">
                    <li class="nav">
                        <a href="#" class="admin">
                            <i class="fa-solid fa-user"></i>
                        </a>
                        <ul class="sub-nav">
                            <li><a href="@Url.Action("DangNhap", "admin")">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <a href="@Url.Action("Index", "admin")">
                <h3 class="w3-bar-item">
                    <i class="fa-solid fa-grid-horizontal"></i>
                    Dashboard
                </h3>
            </a>

            <a href="@Url.Action("User_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-users"></i>
                User manager
            </a>
            <a href="@Url.Action("Room_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-hotel"></i>
                Room manager
            </a>
            <a href="@Url.Action("Restaurant_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-navicon"></i>
                Menu manager
            </a>
            <a href="@Url.Action("QuanLyDatPhongd", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-navicon"></i>
                Quản Lý Đặt Phòng
            </a>
        </div>

        <!-- Page Content -->
        <div style="margin-left: 15%;">
        <div class="header w3-container" style="font-size:36px">
                <p style="margin:20px 0px; font-size:36px;">Quản Lý</p>
            </div>

            <div class="content w3-container" style="height:1000px;">
                <div class="block-content" style="background-color: #FBB9C5;">
                    <a href="@Url.Action("User_Index", "admin")">
                        <i style="font-size: 25px;margin-right:0px;" class="fa-solid fa-user"></i>
                        <p>User</p>
                    </a>
                </div>

                <div class="block-content" style="background-color: #FDD0B1; margin:0 140px">
                    <a href="@Url.Action("Room_Index", "admin")">
                        <i style="font-size: 25px;margin-right:0px;" class="icon fa-solid fa fa-hotel"></i>
                        <p>Room</p>
                    </a>
                </div>

                <div class="block-content" style="background-color: #B8DFE6;">
                    <a href="@Url.Action("Restaurant_Index", "admin")">
                        <i style="font-size: 25px;margin-right:0px;" class="icon fa-solid fa fa-navicon"></i>
                        <p>Menu</p>
                    </a>
                </div>


            </div>

        </div>
    </div>

    <script src="./common/bootstrap-5.2.2-dist/js/popper.min.js"></script>
    <script src="./common/bootstrap-5.2.2-dist/js/bootstrap.min.js"></script>
</body>

</html>