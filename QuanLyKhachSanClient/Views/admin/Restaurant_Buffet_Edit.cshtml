
@{
    ViewData["Title"] = "Restaurant_Buffet_Edit";
}
@model SetbuffetViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa Thông Tin Set Buffet</title>
    <style>
        * {
            text-decoration: none;
        }
    </style>
</head>

<body>

   <form asp-controller="admin" asp-action="Restaurant_Buffet_Update" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="id" value="@Model.Id" />
        <table>
            <tr>
                <td colspan="2">
                    <h1>CẬP NHẬT THÔNG TIN BUFFET</h1>
                </td>
            </tr>
            <tr>
                <td>Tên Set</td>
                <td>
                    <input type="text" name="TenSet" id="TenSet" value="@Model.TenSet">
                </td>
            </tr>
            <tr>
                <td>Giá</td>
                <td>
                    <input type="text" name="Gia" id="Gia" value="@Model.Gia">
                </td>
            </tr>
            <tr>
                <td>Ảnh</td>
                <td>
                    <input type="file" name="imgFile" id="img" value="@Model.Img">
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit">Cập nhật</button>
                    <a asp-controller="admin" asp-action="Restaurant_Buffet_Index">Quay lại</a>
                </td>
            </tr>
            </tbody>
        </table>
    </form>

</body>

</html>