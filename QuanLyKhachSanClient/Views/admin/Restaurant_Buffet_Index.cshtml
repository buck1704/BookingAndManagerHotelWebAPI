
@{
    ViewData["Title"] = "Restaurant_Buffet_Index";
}
@using QuanLyKhachSanClient.Models;
@model List<SetbuffetViewModel>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buffet</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.1.2/css/all.css">
    <link rel="stylesheet" href="../common/bootstrap-5.2.2-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <style>
        table,
        tr,
        td,
        th {
            border: 1px solid black;
            border-spacing: 0;
            text-align: center;
            margin: 200px 10px 0px 60px;
            font-family: Montserrat-Regular;
        }

        th {
            padding: 0 10px;

        }

        li {
            list-style: none;
        }

        a {
            text-decoration: none;
            color: blue;
            margin-top: 10px;
        }
        i{
            margin-right: 10px;
        }
        button {
            margin-top: 200px;
            border: none;
            background-color: #937438;
            font-family: Montserrat-Regular;
            padding: 0 10px;
        }

        .admin {
            background-color: #937438;
            color: #fff;
            padding: 12px 14px;
            margin-bottom: 8px;
            border-radius: 4px;
        }

        .nav {
            font-size: 16px;
        }

        .sub-nav {
            margin-top: 16px;
            display: none;
        }

        .nav:hover .sub-nav {
            display: block;
        }

        .sub-nav li a {
            display: block;
            padding: 4px 4px;
        }

        .sub-nav li:hover a {
            background-color: #ccc;
        }

        .icon {
            font-size: 18px;
        }

        .header {
            position: fixed;
            right: 0;
            top: 0;
            left: 15%;
            background-color: #937438;
            color: white;
            font-weight: 500;
        }

        .content {
            margin-top: 100px;
            display: flex;
            justify-content: space-evenly;
        }

        .content .block-content {
            display: flex;
            width: 250px;
            height: 180px;
            border-radius: 12px;
            align-items: center;
            text-align: center;
            justify-content: center;
            font-size: 18px;

        }
    </style>
</head>

<body>
   <!-- Sidebar -->
        <div class="sidebar w3-sidebar w3-light-grey w3-bar-block" style="width:15%; top: 0">
            <div class="w3-bar-item" style="height: 150px;">
                <ul style="padding: 0;">
                    <li class="nav">
                        <a href="#" class="admin">
                            <i class="fa-solid fa-user"></i>

                        </a>
                        <ul class="sub-nav">
                            <li><a href="@Url.Action("DangNhap", " admin")">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
             <a href="@Url.Action("Index", "admin")">
                <h3 class="w3-bar-item">
                    <i class="fa-solid fa-grid-horizontal"></i>
                    Dashboard
                </h3>
            </a>

            <a href="@Url.Action("User_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-users"></i>
                User manager
            </a>
            <a href="@Url.Action("Room_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-hotel"></i>
                Room manager
            </a>
            <a href="@Url.Action("Restaurant_Index", "admin")" class="w3-bar-item w3-button">
                <i class="icon fa-solid fa fa-navicon"></i>
                Menu manager
            </a>
        </div>

<!-- Page Content -->
            
    <div class="header w3-container">
        <p style="margin:20px 0px; font-size:36px">Quản lý Tài Khoản</p>
    </div>    
    <div style="margin-left: 15%;">
        <div style="display:flex">

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên Set</th>
                    <th>Giá </th>
                    <th>Hình Ảnh</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TenSet</td>
                    <td>@item.Gia</td>
                    <td>@item.Img</td>
                    <td>
                        <a href="@Url.Action("Restaurant_Buffet_Edit", "admin", new { id = @item.Id })">Sửa</a>
                        <a href="@Url.Action("Restaurant_Buffet_Delete", "admin", new { id = @item.Id })">Xoá</a>
                    </td>
                </tr>
                    }

            </tbody>
        </table>

            <button><a href="@Url.Action("Restaurant_Buffet_Create", "admin")" style="color:white ; font-size:50px;">+</a></button>
            </div>

        </div>


        <script src="../common/bootstrap-5.2.2-dist/js/popper.min.js"></script>
        <script src="../common/bootstrap-5.2.2-dist/js/bootstrap.min.js"></script>
</body>

</html>