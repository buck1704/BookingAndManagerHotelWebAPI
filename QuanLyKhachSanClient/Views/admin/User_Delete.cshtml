
@{
    ViewData["Title"] = "User_Delete";
}
@model Quanlytaikhoan

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xóa</title>
</head>
<body>


<h2>Xác nhận xóa người dùng</h2>
    <div>
        <h4>Bạn có chắc chắn muốn xóa người dùng này?</h4>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Họ Tên</dt>
            <dd class="col-sm-10">@Model.HoTen</dd>

            <dt class="col-sm-2">Số Điện Thoại</dt>
            <dd class="col-sm-10">@Model.Sdt</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">CMND</dt>
            <dd class="col-sm-10">@Model.Cmnd</dd>

            <dt class="col-sm-2">PassWord</dt>
            <dd class="col-sm-10">@Model.PassWord</dd>
        </dl>

        <form method="post" asp-action="User_Delete_Conf">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')" />
            <a href="@Url.Action("User_Index", "admin")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>

</body>
</html>