@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "history";
    string sdt = HttpContextAccessor.HttpContext.Session.GetString("Sdt") ;
}

@model List<dynamic>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/history.css?v=@DateTime.Now.Ticks>" type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- link css bootstrap -->
    <link rel="stylesheet" href="../common/bootstrap-5.2.2-dist/css/bootstrap.min.css">
    <!-- link slick -->
    <link rel="stylesheet" type="text/css" href="../common/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="../common/slick/slick-theme.css">
    <link rel="stylesheet" href="../css/style.css?v=@DateTime.Now.Ticks">
    <title>Document</title>
</head>
<body>
    @Html.Partial("header.cshtml")
    <div class="main">


        <div class="mainroom">
            @foreach (var phong in Model)
            {
                <div class="ngaydat"> @phong.NgayTt</div>
                <div class="mainroom_1">
                    <div class="mainroom12">
                        <img src=@phong.Img alt="" width="250px" height="200px">
                    </div>

                    <div class="mainroom11">
                        <p class="mainroom111"> @phong.TenPhong</p>
                        <p class="mainroom112">Tiền Phòng: @phong.TienPhong VNĐ</p>
                        <p class="mainroom112">Dịch vụ: 
                            <ul class="dichvu">
                                @foreach (var tenDichVu in phong.TenDichVu)
                                {
                                    <li class="dichvu">@tenDichVu VNĐ</li>
                                }
                            </ul>
                        </p>
                        <p class="mainroom112">Ngày Đến - Ngày Đi: @phong.NgayDen - @phong.NgayDi </p>
                        <p class="mainroom112">Phương thức thanh toán:   @phong.PhuongThucThanhToan </p>
                    </div>
                    <div class="mainroom13">
                        <div class="mainroom131">Trạng thái</div>
                        <div class="mainroom132">Đã thanh toán</div>
                        <a href="@Url.Action("thongtinphong2", "hotelmanager", new { ma = (int)phong.MaDatPhong, sdt = sdt })">Xem chi tiết</a>
                    </div>
                </div>
            }
        </div>

    </div>

    @Html.Partial("footer.cshtml")
     <!-- jquery -->
     <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <!-- bootstrap -->
    <script src="../common/bootstrap-5.2.2-dist/js/popper.min.js"></script>
    <script src="../common/bootstrap-5.2.2-dist/js/bootstrap.min.js"></script>
    <!-- slick -->
    <script src="../common/slick/slick.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="../js/scrip.js"></script>
</body>
</html>