@{
    ViewData["Title"] = "restaurant";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Burning Washing Closes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- link slick -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="/common/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/common/bootstrap-5.2.2-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="../css/restaurant.css?v=@DateTime.Now.Ticks" type='text/css'>


</head>

<body>
    <!-- header -->
    @Html.Partial("header.cshtml")
    <!-- banner -->
    <section id="banner">
        <div class="container-fluid p-0 text-center">
            <div class="img h-100">
                <img src="../img/service/banner_service_1.jpg" alt="" class="w-100">
                <div class="box">
                    <div class="trangtri"></div>
                    <p class="m-0" style="font-size: 14px;font-family: Montserrat-Regular">Home - <span style="color: #C89E4B;">Service</span></p>
                    <h3 style="font-size:36px;font-family: Montserrat-Bold;">Restaurant</h3>
                    <div class="trangtri"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- end banner -->
    <!-- content -->
    <form action="" method="POSt">
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="left me-5">
                        <h5 class="mb-4">MENU TỔNG</h5>
                        <div class="d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Món ăn nổi bật</p>
                            <p class="m-0">(08)</p>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Món khai vị</p>
                            <p class="m-0">(15)</p>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Món chính</p>
                            <p class="m-0">(14)</p>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Món tráng miệng</p>
                            <p class="m-0">(10)</p>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Đồ uống</p>
                            <p class="m-0">(08)</p>
                        </div>
                        <div class="mt-4 mb-4 d-flex justify-content-between">
                            <p class="m-0"><i class="fa fa-angle-double-right me-1"></i>Buffet</p>
                            <p class="m-0">(05)</p>
                        </div>
                    </div>
                   
                    <div class="right px-4 ">
                        <h5 class="mt-4">THỰC ĐƠN</h5>
                        <h6 class="mt-3">Món nổi bật</h6>

                        <div class="row ">
                            <section class="regular">
                                @foreach (var monnoibat in ViewBag.MonNoiBat)
                                {
                                    <div class="col-4  mt-3 ">
                                        <div class="img">


                                            <img src="~/img/Doan/@monnoibat.Img" alt="" class="w-100 ">
                                            <div class="content">
                                                <p class="m-0" style="font-size: 12px;">
                                                    <span name="gia" style="color:#C89E4B;">@monnoibat.Gia</span>
                                                    / 1 Phần
                                                </p>
                                                <p class="m-0 " name="tenmon" style="font-size: 14px;">@monnoibat.TenMon</p>
                                                <div class="trangtri"></div>
                                                <button type="submit" name='bnt1'>
                                                    Thêm
                                                </button> 
                                            </div>
                                        </div>
                                    </div>

                                }

                            </section>
                            <script>
                                document.getElementById("bnt1").onclick = function () {
                                    document.getElementById("content").style.display = 'block';
                                    document.getElementById("mon").innerHTML = document.querySelector("[name='tenmon']").textContent;
                                };
                            </script>
                            <div class="trangtri1"></div>

                        </div>

                        <h6 class="mt-3">Món khai vị</h6>
                        <div class="row ">
                            <section class="regular">
                                @foreach (var monkhaivi in ViewBag.MonKhaiVi)
                                {
                                    <div class="col-4  mt-3 ">
                                        <div class="img">
                                            <img src="~/img/MonKhaiVi/@monkhaivi.Img" alt="" class="w-100 ">
                                            <div class="content">
                                                <p class="m-0" style="font-size: 12px;">
                                                    <span style="color:#C89E4B;">@monkhaivi.Gia</span>
                                                    / 1 Phần
                                                </p>
                                                <p class="m-0" id="tenmon" style="font-size: 14px;">@monkhaivi.TenMon</p>
                                                <div class="trangtri"></div>
                                                <button>
                                                    Thêm
                                                </button> 
                                            </div>
                                        </div>
                                    </div>
                                }

                            </section>
                            <div class="trangtri1"></div>

                        </div>

                        <h6 class="mt-3">Món chính</h6>

                        <div class="row ">
                            <section class="regular">
                                @foreach (var monchinh in ViewBag.MonChinh)
                                {
                                    <div class="col-4  mt-3 ">
                                        <div class="img">
                                            <img src="~/img//MonChinh/@monchinh.Img" alt="" class="w-100 ">
                                            <div class="content">
                                                <p class="m-0" style="font-size: 12px;">
                                                    <span style="color:#C89E4B;">@monchinh.Gia</span>
                                                    / 1 Phần
                                                </p>
                                                <p class="m-0 " style="font-size: 14px;">@monchinh.TenMon</p>
                                                <div class="trangtri"></div>
                                                 <button type="submit" name="btn3">
                                                    Thêm
                                                </button> 
                                            </div>
                                        </div>
                                    </div>

                                }

                            </section>
                            <div class="trangtri1"></div>

                        </div>

                        <h6 class="mt-3">Món tráng miệng</h6>

                        <div class="row ">
                            <section class="regular">
                                @foreach (var montrangmieng in ViewBag.MonTrangMieng)
                                {
                                    <div class="col-4  mt-3 ">
                                        <div class="img">
                                            <img src="~/img/MonTrangMieng/@montrangmieng.Img" alt="" class="w-100 ">
                                            <div class="content">
                                                <p class="m-0" style="font-size: 12px;">
                                                    <span style="color:#C89E4B;">@montrangmieng.Gia</span>
                                                    / 1 Phần
                                                </p>
                                                <p class="m-0 " style="font-size: 14px;">@montrangmieng.TenMon</p>
                                                <div class="trangtri"></div>
                                                 <button type="submit" name="bnt4">
                                                    Thêm
                                                </button> 
                                            </div>
                                        </div>
                                    </div>

                                }

                            </section>
                            <div class="trangtri1"></div>

                        </div>

                        <h6 class="mt-3">Đồ uống</h6>

                        <div class="row ">
                            <section class="regular">
                                @foreach (var douong in ViewBag.DoUong)
                                {
                                    <div class="col-4  mt-3 ">
                                        <div class="img">
                                            <img src="/img/DoUong/@douong.Img" alt="" class="w-100 ">
                                            <div class="content">
                                                <p class="m-0" style="font-size: 12px;">
                                                    <span style="color:#C89E4B;">@douong.Gia</span>
                                                    / 1 Phần
                                                </p>
                                                <p class="m-0 " style="font-size: 14px;">@douong.TenDoUong</p>
                                                <div class="trangtri"></div>
                                                 <button type="submit" name="btn5">
                                                    Thêm
                                                </button> 
                                            </div>
                                        </div>
                                    </div>

                                }
                            </section>
                            <div class="trangtri1"></div>
                        </div>


                    </div>
                </div>
            </div>
        </section>
        <section id="buffet" style="background-color: black; color: white; font-family: Montserrat-Regular;">
            <div class="container">
                <div class="row">
                    <div class="left me-5"></div>
                    <div class="right p-0">
                        <h6 class="mt-3">Buffet</h6>

                        <div class="row ">
                            @foreach (var buffet in ViewBag.Buffets)
                            {
                                <div class="col-3">
                                    <div class="img ">
                                        <img src="/img/Doan/@buffet.Img" alt="" class="h-100 w-100 rounded-4">
                                        <div id="modal">
                                            <!-- Button trigger modal -->
                                            <div class="button1">
                                                <button type="button" class="" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                    Chi Tiết
                                                </button>
                                            </div>
                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content dialog">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="exampleModalLabel">@buffet.TenSet</h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">

                                                            <div class="row">
                                                                <div class="col-6">
                                                                    <img src="@buffet.Img" alt="" height="200px" class="w-100 rounded-4">
                                                                </div>
                                                                <div class="col-6">
                                                                    <h5>Menu bao gồm</h5>
                                                                    <p>
                                                                        1, Gỏi chân gà rút xương ngó sen <br>
                                                                        2, Súp tam tơ <br>
                                                                        3, Cá diêu hồng xốt cam <br>
                                                                        4, Bò nấu tiêu xanh dùng kèm với bánh mì <br>
                                                                        5, Lẩu thập cẩm dùng kèm với mì <br>
                                                                        6, Bánh tuyết thiên sứ <br>
                                                                    </p>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </form>

    <!-- end content -->
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-3"></div>
            </div>
        </div>
    </section>

    <!-- footer -->
    @Html.Partial("footer.cshtml")
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" type="text/javascript"></script>

    <!-- bootstrap -->
    <script src="~/common/bootstrap-5.2.2-dist/js/popper.min.js"></script>
    <script src="~/common/bootstrap-5.2.2-dist/js/bootstrap.min.js"></script>
    <!-- slick -->
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="~/js/scrip.js" asp-append-version=" true"></script>
</body>

</html>