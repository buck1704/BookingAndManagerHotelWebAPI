@{
    ViewData["Title"] = "Thông tin phòng";
}

@{
    dynamic thongtinphong = Model;
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
        <div class="alert alert-danger" role="alert">
        @ViewBag.Error
        </div>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết phòng</title>
    <link rel="stylesheet" href="../css/thongtinphong.css?v=@DateTime.Now.Ticks" type='text/css'>

    <link rel="stylesheet" href="../css/style.css?v=@DateTime.Now.Ticks">
    <script src="https://kit.fontawesome.com/a0ff9460a2.js" crossorigin="anonymous"></script>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
    <!-- menu -->
    @Html.Partial("header.cshtml")
    <div class="main">
      
            <div class="body">
                <div class="inforroom">
                    <h1>Chi Tiết Phòng</h1>

                    <p class="inforroom1">Mã Phòng: @Model.maDp</p>
                    <p class="inforroom1">Loại Phòng: @Model.loaiPhong</p>
                    <div class="inforanh">
                        <img src="@Model.img" alt="" width="550px" height="250px">
                        <div class="inforchu">
                            <div class="inforrice">
                                <div class="rice1">@Model.giaPhong</div></br>
                                <div class="rice2">/Night</div>
                            </div>
                            <div class="rice3">@Model.tenPhong</div>
                        </div>
                    </div>
                </div>
                <div class="inforchitiet">
                    <table>
                        <tr>
                            <td>Ngày đặt:</td>
                            <td> @Model.ngayDen</td>
                        </tr>
                        <tr>
                            <td>Ngày trả:</td>
                            <td> @Model.ngayDi </td>
                        </tr>
                        <tr>
                            <td>Tên khách hàng: </td>
                            <td> @Model.hoTen</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại:</td>
                            <td> @Model.sdt</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td> @Model.email</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền:</td>
                            <td> @Model.soTienPhaiTra VND</td>
                        </tr>
                        <tr>
                            <td>Trạng thái:</td>
                            <td>Đã thanh toán</td>
                        </tr>
                    </table>
                </div>

                <div>
                <a href="/hotelmanager/HuyDatPhong?MaDP=@Model.maDp&Id=@Model.id" onclick="return confirm('Bạn chắc chắn muốn hủy đặt phòng?');">Hủy Đặt Phòng</a>
                         Đặt Phòng</a>
                </div>
            </div>
       
        

    </div>
    <!-- footer -->
    @Html.Partial("footer.cshtml")
</body>
</html>

